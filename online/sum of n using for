import java.util.*;

class myclass
{
    public static void main(String[] args)
    {
        Scanner scn = new Scanner(System.in);
        int a = scn.nextInt();
        int count = 0;
        for(int i = 1; i<= a; i++)
        {
            count+= i;
        }
        
        System.out.println(count);
    }
}
